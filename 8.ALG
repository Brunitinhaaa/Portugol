Algoritmo "Distancia em metros"

Var
M, Km, Hm, Dam, dm, cm, mm: real

Inicio
Escreva ("Digite uma distância em metros:")
Leia (M)
Km <- M/1000
Hm <- M/100
Dam <- M/10
dm <- M*10
cm <- M*100
mm <- M*1000
Escreval ("A distância de ",M," corresponde a:")
Escreval (Km,"Km")
Escreval (Hm,"Hm")
Escreval (Dam,"Dam")
Escreval (dm,"dm")
Escreval (cm,"cm")
Escreval (mm,"mm")

Fimalgoritmo